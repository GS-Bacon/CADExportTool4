<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:enums="clr-namespace:CADExportTool.Core.Enums;assembly=CADExportTool.Core">

    <!-- ファイルタイプによる色定義 -->
    <SolidColorBrush x:Key="DrawingFileBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="PartFileBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="AssemblyFileBrush" Color="#0D47A1"/>

    <!-- ファイルリストアイテムスタイル -->
    <Style x:Key="FileListItemStyle" TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding FileType}" Value="{x:Static enums:CadFileType.Drawing}">
                <Setter Property="Foreground" Value="{StaticResource DrawingFileBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding FileType}" Value="{x:Static enums:CadFileType.Part}">
                <Setter Property="Foreground" Value="{StaticResource PartFileBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding FileType}" Value="{x:Static enums:CadFileType.Assembly}">
                <Setter Property="Foreground" Value="{StaticResource AssemblyFileBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
